{
  "name": "RCEH",
  "version": "0.0.1",
  "description": "React & cutting edge stack hackathon",
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild:html": "npm run clean",
    "build:html": "mkdir dist && hashmark ./src/index.html ./dist/{name}.html",
    "build:webpack": "webpack -p --progress --colors",
    "build": "npm run build:html && npm run build:webpack",
    "predev": "npm run build:html",
    "dev": "npm run build && webpack-dev-server --hot --content-base ./dist/ --port 4000 --history-api-fallback --inline"
  },
  "dependencies": {
    "classnames": "^2.1.0",
    "flux": "^2.0.3",
    "immutable": "^3.7.2",
    "react": "^0.13.3",
    "react-router": "^0.13.3",
    "whatwg-fetch": "^0.8.1"
  },
  "devDependencies": {
    "autoprefixer-loader": "^1.2.0",
    "babel-core": "^5.2.17",
    "babel-eslint": "^3.1.1",
    "babel-loader": "^5.0.0",
    "babel-runtime": "^5.2.17",
    "classnames": "^2.1.1",
    "css-loader": "^0.12.0",
    "exports-loader": "^0.6.2",
    "file-loader": "^0.8.1",
    "hashmark": "^3.0.0",
    "react-hot-loader": "^1.2.7",
    "rimraf": "^2.3.3",
    "style-loader": "^0.12.2",
    "stylus": "^0.51.1",
    "stylus-loader": "^1.1.1",
    "url-loader": "^0.5.5",
    "webpack": "^1.9.4",
    "webpack-dev-server": "^1.8.2",
    "yargs": "^3.8.0"
  }
}
